{
  "name": "WebComponentsStarterKit",
  "version": "0.0.1",
  "description": "Web components starter kit",
  "main": "index.js",
  "repository": "git@github.com:TCotton/webcomponents-starter-kit.git",
  "author": "Andy Walpole <me@andywalpole.me>",
  "license": "MIT",
  "scripts": {
    "lint": "standard",
    "lintFix": "standard --fix",
    "build": "npm run copySrcToDist && npm run compileSrcToSystem",
    "copySrcToDist": "rm -r dist-esm ; cp -r src dist-esm",
    "compileSrcToSystem": "rm -r dist-system ; babel src --out-dir dist-system --plugins transform-es2015-modules-systemjs"
  },
  "standard": {
    "globals": [
      "SystemJS"
    ]
  },
  "dependencies": {
    "systemjs": "^0.20.7",
    "webcomponentsjs": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "standard": "^9.0.0-beta.0",
    "webpack": "^2.2.1"
  }
}
